extends layout
block content
  h1= title

  form(method='post', action='/session/signin')
    div
        label(for ='login')= 'Login'
    div
        input#login(name='login')
    div
        label(for ='password')= 'Password'
    div
        input#password(type='password', name='password')
    div
        input(type='submit')

    if err
        div= err.msg
